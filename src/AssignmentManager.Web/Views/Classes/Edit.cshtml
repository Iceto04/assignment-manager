@model AssignmentManager.Web.ViewModels.Class.ClassDetailsViewModel

@{
    ViewData["Title"] = "Edit Class";
}
<link rel="stylesheet" href="/css/classes/edit.css" />

<script>
    const scheduleTab = document.getElementsByClassName("nav_list__li--schedule")[0];
    const classesTab = document.getElementsByClassName("nav_list__li--classes")[0];

    classesTab.classList.add("nav_list__li--active");
</script>


<h1 class="main_title">EDIT</h1>

<form asp-action="Edit" class="form_edit_class">
    <label class="form_edit_class__label" asp-for="Name">Class Title</label>
    <input class="form_edit_class__name_input" asp-for="Name" placeholder="Title" />
    @*<span asp-validation-for="Name"></span>*@

    <label class="form_edit_class__label">Class Color</label>
    <div class="form_edit_class__color_input">
        @{
            Random rand = new Random();
            for (var i = 1; i <= 16; i++)
            {
                <input asp-for="Color" type="radio" value="@i" id="color_@i" />
                /* Color & ColorId confusion */
                <label style="background-color: #@rand.Next(0, 16777215).ToString("X");;" for="color_@i" class="color_box"></label>
            }
        }
    </div>

    <a asp-controller="Classes" asp-action="Delete" asp-route-id="@Model.Id">
        <div class="delete">
            <img src="/content/delete.png" />
        </div>
    </a>

    <div>
        <button type="submit" class="save_class">
            <img src="/content/save.png" />
        </button>
    </div>
</form>




