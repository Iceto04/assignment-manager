@using AssignmentManager.Data
@model AssignmentManager.Web.ViewModels.Assignment.AssignmentDetailsViewModel

@{
    ViewData["Title"] = "Assignment Details";
}
<link rel="stylesheet" href="/css/assignments/details.css" />

<script>
    const scheduleTab = document.getElementsByClassName("nav_list__li--schedule")[0];
    const classesTab = document.getElementsByClassName("nav_list__li--classes")[0];

    scheduleTab.classList.add("nav_list__li--active");
</script>

@{
        var db = new AssignmentManagerDbContext();
        var className = db.Classes.FirstOrDefault(x => x.Id == Model.ClassId).Name;
}

<h1 class="main_title">@Model.Name</h1>
<span class="subtitle">@className</span>
<span class="subtitle">Due @Model.DueDate.ToString("dd/MM/yyyy")</span>
<div class="divider"></div>
<p class="description">@Model.Description</p>


<a asp-action="" asp-route-id="@Model.Id">
    <div class="complete_assignment">
        <span>COMPLETE</span>
    </div>
</a>

<a asp-action="Edit" asp-route-id="@Model.Id">
    <div class="edit_assignment">
        <img src="/content/edit.svg" />
    </div>
</a>